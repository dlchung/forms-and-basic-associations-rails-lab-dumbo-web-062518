<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p><%= f.label :title %> <%= f.text_field :title %></p>
  <p><%= f.label :artist_name %> <%= f.text_field :artist_name %></p>
  <p><%= f.collection_select :genre_id, Genre.all, :id, :name %></p>
  <p><%= f.label 'Note 1:' %> <%= f.text_field :note_contents, name: "song[note_contents][]", id: 'song_notes_1' %></p>
  <p><%= f.label 'Note 2:' %> <%= f.text_field :note_contents, name: "song[note_contents][]", id: 'song_notes_2' %></p>
  <p><%= f.label 'Note 3:' %> <%= f.text_field :note_contents, name: "song[note_contents][]", id: 'song_notes_3' %></p>

  <p><%= f.submit %></p>
<% end %>
